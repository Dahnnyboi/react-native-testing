{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "typeRoots": ["./src/types"],
    "paths": {
      "*": ["src/*"],
      "@apis/*": ["src/apis/*"],
      "@app/*": ["src/app/*"],
      "@components/*": ["src/components/*"],
      "@constants/*": ["src/constants/*"],
      "@modules/*": ["src/modules/*"],
      "@hooks/*": ["src/hooks/*"],
      "@screens/*": ["src/screens/*"],
      "@store/*": ["src/store/*"],
      "@utils/*": ["src/utils/*"]
    }
  }
}
